generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  id              String   @id
  mcpUrl          String
  walletPublicKey String
  createdAt       DateTime @default(now())

  tools           Tool[]
}

model Tool {
  id         Int      @id @default(autoincrement())
  providerId String
  toolName   String
  priceCents Int

  provider   Provider @relation(fields: [providerId], references: [id])

  @@unique([providerId, toolName])
}

model Payment {
  id            String   @id @default(cuid())

  // Foreign keys only (NO Prisma relations)
  providerId    String
  toolId        Int

  // Wallets (public addresses only)
  fromAddress   String   // AGENT_PUBLIC_KEY
  toAddress     String   // provider.walletPublicKey

  // Amounts
  amountCents   Int
  amountDecimal Float
  currency      String   // "MNEE"

  // On-chain proof
  ticketId      String?   @unique
  status        PaymentStatus

  // Metadata
  createdAt     DateTime @default(now())

  @@index([providerId])
  @@index([toolId])
  @@index([fromAddress])
  @@index([toAddress])
}



enum PaymentStatus {
  SUCCESS
  FAILED
}
